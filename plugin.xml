<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-firebase-phoneauth" version="1.0.5">
    <name>Firebase Phone Number Authentication</name>
    <description>Adds support for Firebase Phone Number Authentication to your Cordova/PhoneGap apps.</description>
    <license>Apache 2.0</license>
    <keywords>firebase,cordova,authentication,phone,number</keywords>
    <author>Guy Rombaut</author>
    <repo>https://github.com/guyromb/cordova-firebase-phoneauth.git</repo>
    <issue>https://github.com/guyromb/cordova-firebase-phoneauth/issues</issue>

    <js-module src="www/firebaseAuthPlugin.js" name="FirebaseAuthPlugin">
        <clobbers target="FirebaseAuth" />
    </js-module>

    <engines>
        <engine name="cordova" version=">=6.0.0" />
        <engine name="cordova-android" version=">=4.0.0" />
        <engine name="cordova-plugman" version=">=4.2.0" />
    </engines>

    <dependency id="cordova-plugin-cocoapod-support"/>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="FirebasePhoneNumberAuthPlugin">
                <param name="ios-package" value="FirebasePhoneNumberAuthPlugin" />
            </feature>
        </config-file>
        <header-file src="src/ios/FirebasePhoneNumberAuthPlugin.h" />
        <source-file src="src/ios/FirebasePhoneNumberAuthPlugin.m" />
        <header-file src="src/ios/AppDelegate+FirebasePhoneNumberAuthPlugin.h" />
        <source-file src="src/ios/AppDelegate+FirebasePhoneNumberAuthPlugin.m" />
        <pod id="Firebase/Auth" />
        <pod id="GoogleSignIn" />
    </platform>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="FirebasePhoneNumberAuthPlugin">
                <param name="android-package" value="net.gsrweb.cordova.plugin.FirebasePhoneNumberAuthPlugin" />
            </feature>
        </config-file>

        <framework src="src/android/plugin.gradle" custom="true" type="gradleReference" />
        <framework src="com.google.firebase:firebase-auth:9.4+" />
        <framework src="com.google.android.gms:play-services-auth:9.4+" />

        <source-file src="src/android/net/gsrweb/cordova/plugin/FirebasePhoneNumberAuthPlugin.java"
            target-dir="src/net/gsrweb/cordova/plugin/" />
        <config-file target="AndroidManifest.xml" parent="/*/application">
            <meta-data android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
        </config-file>
    </platform>
</plugin>
